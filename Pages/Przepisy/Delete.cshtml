@page
@model MajsterChef.Pages.Przepisy.DeleteModel

@{
    ViewData["Title"] = "Usuwanie przepisu";
}

<h1>Usuń</h1>
@if (Model.Przepis.Owner == User.Identity.Name)
{
    <h3>Czy na pewno chcesz usunąć ten przepis?</h3>
    <div style=" background-color: white; padding: 20px">
        <h4>Przepis</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Przepis.Owner)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Przepis.Owner)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Przepis.Nazwa)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Przepis.Nazwa)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Przepis.Opis_wykonania)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Przepis.Opis_wykonania)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Przepis.Data_publikacji)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Przepis.Data_publikacji)
            </dd>
        </dl>
    
        <form method="post">
            <input type="hidden" asp-for="Przepis.ID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>
}
else
{ <p>Nie możesz usunąć przepisu, którego nie dodałeś.</p>}